<% if (title) { %>
  <h1><%= title %></h1>
<% } %>
<%- messages() %>
<% if (typeof errors !== 'undefined' && errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<% if (typeof accountData !== 'undefined' && accountData) { %>
  <form method="post" action="/account/update/">
    <fieldset>
    <legend>Update Account Information</legend>

    <input type="hidden" name="account_id" value="<%= accountData.account_id %>">

    <label for="account_firstname">First Name:</label>
    <input type="text" id="account_firstname" name="account_firstname" value="<%= accountData.account_firstname %>" required>

    <label for="account_lastname">Last Name:</label>
    <input type="text" id="account_lastname" name="account_lastname" value="<%= accountData.account_lastname %>" required>

    <label for="account_email">Email:</label>
    <input type="email" id="account_email" name="account_email" value="<%= accountData.account_email %>" required>

    <button type="submit">Update Account</button>
      </fieldset>
  </form>

  <form method="post" action="/account/update-password/">
    <fieldset>
    <legend>Update password</legend>

    <input type="hidden" name="account_id" value="<%= accountData.account_id %>">

    <label for="account_password">New Password:</label>
    <p class="password-info">
    <strong>Note:</strong> Entering a new password will change your current password. 
    Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter, and 1 special character.
    </p>
    <input type="password" id="account_password" name="account_firstname" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" >
    <br>
    <button type="submit">Change Password</button>
      </fieldset>
  </form>
<% } %>